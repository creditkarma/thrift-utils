{
  "name": "@creditkarma/thrift-utils",
  "version": "0.0.1",
  "description": "Utils functions for Thrift TypeScript",
  "main": "./dist/index.js",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "codegen": "thrift-typescript --rootDir ./ --sourceDir fixtures/thrift --outDir src/test/generated",
    "clean": "rimraf ./src/test/generated",
    "postinstall": "npm run codegen",
    "test": "lab --coverage --coverage-path ./src/main --sourcemaps --transform node_modules/lab-transform-typescript ./src/test",
    "test:watch": "watch 'npm test' ./src",
    "coverage": "lab --coverage --sourcemaps -r console -o stdout -r html -o ./coverage/coverage.html ./dist/test",
    "release:patch": "npm version patch && npm run release:publish",
    "release:minor": "npm version minor && npm run release:publish",
    "release:major": "npm version major && npm run release:publish",
    "release:publish": "npm publish && git push --follow-tags"
  },
  "keywords": [
    "thrift",
    "typescript"
  ],
  "author": "Nick Nance",
  "license": "ISC",
  "devDependencies": {
    "@creditkarma/thrift-typescript": "0.0.10",
    "@types/code": "^4.0.3",
    "@types/lab": "^11.1.0",
    "@types/node": "^8.0.34",
    "@types/thrift": "^0.10.1",
    "lab": "^14.3.1",
    "lab-transform-typescript": "^3.0.1",
    "rimraf": "^2.6.2",
    "tslint": "^5.7.0",
    "typescript": "^2.5.3",
    "watch": "^1.0.2"
  },
  "dependencies": {
    "thrift": "^0.10.0"
  }
}
